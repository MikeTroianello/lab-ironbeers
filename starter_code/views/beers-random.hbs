<div class="flexy">

<img class="random-beer-img" src="{{randomBeer.image_url}}" alt="">

  <div class="beer-random">
      <h5 class="random-beer-title"><b>{{randomBeer.name}}</b></h5>
      <p class="random-beer-tagline">{{randomBeer.tagline}}</p>
      <p class="random-beer-text">{{randomBeer.description}}</p>
      <h3 class="random-food_pairing">Food Pairing</h3>
        <ul>
          {{#each randomBeer.food_pairing}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
    <div>
        <h5 class="random-brewers_tips"> <b>Brewers Tips:</b> {{randomBeer.brewers_tips}}</h5>
    </div>
    </div>
  </div>
</div>